<!DOCTYPE html>
<html>
<head>
  <title>RisqueFactr</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="nav">
  <h1 id="logo">RisqueFactr</h1>
  <ul>
  <% if session[:user_id] %>
    <li>
      <%= link_to "Dash", "/users" %><br>
    </li>
    <li><%= link_to "Partners", "/partners" %></li>
    <li><%= link_to "Tests", sti_tests_path %></li>
    <li>
      <%= link_to "Log out", "/logout"%><br>
    </li>
  <% else %>
    <li><%= link_to "Sign Up", new_user_path %></li>
  <% end %>
  </ul>
</div>
<%= yield %>

</body>
</html>
