<%= @user.name %> with <%= @partner.name %><br>
fluid exchange: <%= @encounter.fluid %><br>
date: <%= @encounter.took_place %><br>
self-assessed risk level: <%= @encounter.self_risk %><br>
app-assessed risk level: <%= @encounter.risk %><br>
notes: <%= @encounter.notes %><br>
<% @contacts.each do |contact| %>
<% if @user.pref_id %>
    <% if contact[0] == "genitals" %>
      <%= "your #{@user.pref.genital_name} came in contact with " %>
    <% elsif contact[0] == "anus" %>
      <%= "your #{@user.pref.anus_name} came in contact with" %>
    <% else %>
      <%= "your #{contact[0]} came in contact with " %>
    <% end %>
  <% else %>
    <%= "your #{contact[0]} came in contact with " %>
  <% end %>
  <% if @partner.pref_id %>
    <%= @partner.pronoun.possessive %>
  <% else %>
    <%= "their" %>
  <% end %>
  <% if @partner.pref_id %>
    <% if contact[1] == "genitals" %>
      <%= @partner.pref.genital_name %>
    <% elsif contact[1] == "anus" %>
      <%= @partner.pref.anus_name %>
    <% else %>
      <%= contact[1] %>
    <% end %>
  <% else %>
    <%= contact[1] %>
  <% end %>
  <% if contact[2] %>
    <%= "with a barrier" %><br>
  <% else %>
    <%= "without a barrier" %><br>
  <% end %>
<% end %>
<br><%= link_to "edit", edit_partner_encounter_path(@encounter.partner, @encounter)%>
