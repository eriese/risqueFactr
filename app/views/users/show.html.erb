<div class="center">
  <h1><%= "#{@user.name}" %>
    <% if @user.pref_id %>
      <%= " (#{@user.pronoun.subject})" %></h1> <br>
    <% end %>
  Average risk:

    <span class=<%=@user.risk%>><%= @user.risk %></span>
  <br><br>
  <% @diseases.each do |disease| %>
    <% if disease[1] %>
      <strong><%= disease[0] %></strong> risk window began:
        <%=" #{disease[1].strftime('%m/%d/%Y')}" %>
      <% else %>
        No test data for <strong><%= disease[0] %></strong>; consider getting tested.
    <% end %><br>
    <br>
  <% end %>
  <%= link_to "edit", edit_user_path(@user) %><br>
</div>
<div class="dashes"></div>
<div class="right">
  <h2>Recent Encounters:</h2>
  <ul>
    <li><% @encounters.each do |encounter| %>
        <br><%= link_to encounter.took_place, partner_encounter_path(encounter.partner, encounter) %>: <br>
        <%= encounter.partner.name %><br>
        Risk level:
        <% if encounter.risk <= 4 %>
          <span class="low">low</span>
        <% elsif encounter.risk <= 8 %>
          <span class="medium">medium</span>
        <% else %>
          <span class="high">high</span>
        <% end %><br>
      <% end %>
    </li>
  </ul>
</div>
