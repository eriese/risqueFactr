<div class="dashes hidden to-hide"></div>
<div class="center">
  <%= form_for @user do |t| %>
  <%= t.label :name %>
  <%= t.text_field :name %><br>
  <%= t.label :email, "Username" %>
  <%= t.text_field :email, value: @email %><br>
  <%= t.label :password %>
  <%= t.password_field :password, value: @password %><br>
  <%= t.label :password_confirmation %>
  <%= t.password_field :password_confirmation %>
  <br>
  <br>
  <%= t.fields_for :pref do |f| %>
    <h2>Preferences:</h2>
    <%= f.label :genital_name, "What do you call your genitals?" %>
    <%= f.text_field :genital_name %><br>
    <%= f.label :anus_name, "What do you call your anus?" %>
    <%= f.text_field :anus_name %><br>
    <%= f.label :pronoun_id, "What pronouns do you use?" %>
    <%= f.select :pronoun_id, options_from_collection_for_select(@pronouns, :id, :subject) %>
    <% end %>
    <br>
  <%= t.submit %>
  <% end %></div>
